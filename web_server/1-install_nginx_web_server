#!/usr/bin/env bash

# Install and update packages
sudo apt-get update && sudo apt-get upgrade -y

# Install Nginx web server
sudo apt-get install nginx -y

# Create the website directory (if it doesn't exist)
sudo mkdir -p /var/www/html

# Create an index.html file with content
echo "Holberton School" | sudo tee /var/www/html/index.html

# Restart Nginx service
sudo systemctl restart nginx  # Corrected command to use systemctl

# Verification (optional)
curl http://localhost -s | grep "Holberton School" && echo "Nginx found Holberton School in response!"
